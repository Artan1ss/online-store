{
  "name": "online_store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "next build",
    "start": "next start",
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "deploy:db": "node scripts/deploy-db.js",
    "test:db-connection": "node scripts/test-db-connection.js",
    "db:health-check": "node scripts/db-health-check.js",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint-report": "eslint 'src/**/*.{ts,tsx}' --max-warnings=9999",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "verify-types": "node scripts/verify-types.js",
    "prevercel-build": "npm run verify-types-build"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/formidable": "^3.4.5",
    "axios": "^1.8.4",
    "formidable": "^3.5.2",
    "next": "^15.2.2",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.54.2",
    "react-icons": "^4.8.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^18.19.80",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "autoprefixer": "^10.4.0",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.4.1",
    "dotenv": "^16.4.7",
    "eslint": "^9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "postcss": "^8.4.0",
    "prettier": "^3.5.3",
    "prisma": "^6.5.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.2"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc-files --noEmit"
    ]
  }
}
